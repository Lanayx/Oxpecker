import { createSignal } from "solid-js";

export function Test(show) {
    const x = createSignal(7)[0];
    return <div>
        <Show when={show}
            fallback={<div>
                World
            </div>}>
            <div>
                Hello
            </div>
        </Show>
        <Switch fallback={<p>
                {x()}
                is between 5 and 10
            </p>}>
            <Match when={x() > 10}>
                <p>
                    {x()}
                    is greater than 10
                </p>
            </Match>
            <Match when={x() < 5}>
                <p>
                    {x()}
                    is less than 5
                </p>
            </Match>
        </Switch>
    </div>;
}

